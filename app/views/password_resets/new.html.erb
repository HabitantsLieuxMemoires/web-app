<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" id="reset-password">

  <%= bootstrap_form_tag url: password_resets_path do |f| %>

    <h2><%= raw t('password.please_reset') %></h2>
    <hr>

    <%= f.text_field :identity,
                      hide_label: true,
                      placeholder: t('auth.identity'),
                      class: "input-lg" %>

    <hr>

    <%= f.submit t('do.reset'), class: "btn btn-success btn-block btn-lg" %>

  <% end %>
</div>
