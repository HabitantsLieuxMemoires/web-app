<%= bootstrap_form_for [@article, Video.new],
                       remote: true,
                       url: {action: "create"},
                       layout: :horizontal do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 id="modal-add-video-label">
      <%= fa_icon "video-camera" %>
      <%= t('article.video.title.add') %>
    </h4>
  </div>
  <div class="modal-body">
    <div class="alert alert-info"><%= t('article.video_welcome') %></div>
    <div class="row">
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="<%= asset_path 'youtube.png' %>" alt="youtube">
        </div>
      </div>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="<%= asset_path 'dailymotion.png' %>" alt="dailymotion">
        </div>
      </div>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="<%= asset_path 'vimeo.jpg' %>" alt="vimeo">
        </div>
      </div>
    </div>
    <br>

    <%= f.text_field :title %>
    <%= f.text_field :url   %>

  </div>
  <div class="modal-footer">
      <%= f.primary t('article.video.do.add'), id: 'add_video' %>
  </div>
<% end %>
