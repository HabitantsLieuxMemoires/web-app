<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h4 id="modal-create-comment-label">
    <%= fa_icon "comment" %>
    <%= t('article.comment.title.create') %>
  </h4>
</div>
<%= bootstrap_form_for [@article, Comment.new],
                       url: {action: "create"},
                       remote: true,
                       layout: :horizontal do |f| %>
