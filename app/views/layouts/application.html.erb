<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Hlm</title>
      <meta charset="utf-8">
      <%= stylesheet_link_tag    "application", media: "all" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
    </head>
    <body data-env="<%= Rails.env %>">
      <%= render 'shared/header' %>

      <div class="container">
        <hr>
        <%= render 'shared/messages' %>
        <div class="row">
          <div class="col-lg-3">
            <% if content_for?(:sidebar) %>
              <%= yield(:sidebar) %>
            <% else %>
              <%= render 'shared/sidebar' %>
            <% end %>
          </div>
          <div class="col-lg-9">
            <%= yield %>
          </div>
        </div>
      </div>

      <%= javascript_pluggable_tag %>
    </body>
</html>
