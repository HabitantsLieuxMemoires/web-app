<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Hlm</title>
      <meta charset="utf-8">
      <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
      <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
      <%= javascript_include_tag "debug", "data-turbolinks-track" => true %>
      <%= csrf_meta_tags %>
      <script type="application/javascript">
        var ENV = <%=Rails.env.development? %> ? 'DEV' : 'PROD';
      </script>
    </head>
    <body>

        <%= render 'layouts/header' %>

        <div class="container">
          <hr>
          <div class="row">
            <div class="col-lg-3">
                <%= render 'layouts/sidebar' %>
            </div>
            <div class="col-lg-9">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        </div>

    </body>
</html>
