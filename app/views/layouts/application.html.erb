<!DOCTYPE html>
<html lang="<%= I18n.locale %>">

  <%= render 'layouts/head' %>

  <body data-env="<%= Rails.env %>">
    <%= render 'shared/header' %>

    <div class="container">
      <hr>
      <%= render 'shared/messages' %>
      <div class="row">
        <div class="col-lg-3">
          <% if content_for?(:sidebar) %>
            <%= yield(:sidebar) %>
          <% else %>
            <div id="search-column" class="hidden-xs hidden-sm">
            <%= render 'shared/sidebar' %>
            </div>
          <% end %>
        </div>
        <div class="col-lg-9">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render 'shared/footer' %>

    <%= javascript_pluggable_tag %>
  </body>

</html>
