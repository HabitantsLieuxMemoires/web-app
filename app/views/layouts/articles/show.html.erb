<!DOCTYPE html>
<html lang="en">
    <head>
      <title>Hlm</title>
      <meta charset="utf-8">
      <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
      <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
      <%= csrf_meta_tags %>
      <script type="application/javascript">
          var ENV = <%=Rails.env.development? %> ? 'DEV' : 'PROD';
      </script>
    </head>
    <body>
      <%= render 'shared/header' %>

      <div class="container">
        <hr>
        <div class="row">
          <div class="col-lg-3">
            <%= render 'shared/sidebar_actions' %>

            <%= render 'layouts/articles/sidebar_actions' %>
            <%= render 'layouts/articles/sidebar_details_show' %>
          </div>
          <div class="col-lg-9">
            <%= render 'shared/messages' %>
            <%= yield %>
          </div>
        </div>
      </div>

      <%= javascript_pluggable_tag %>
    </body>
</html>
