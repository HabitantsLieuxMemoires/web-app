<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" id="login">
  <%= bootstrap_form_tag url: sessions_path, method: :post, inline_errors: false do |f| %>

    <h2><%= raw t('auth.please_login') %></h2>
    <hr>

    <%= f.text_field :identity,
                      hide_label: true,
                      placeholder: t('auth.identity'),
                      class: "input-lg" %>

    <%= f.password_field :password,
                          hide_label: true,
                          placeholder: User.human_attribute_name(:password),
                          class: "input-lg" %>

    <span class="button-checkbox">
        <div class="row">
          <div class="col-md-6">
            <%= f.check_box :remember_me, label: t('auth.remember_me') %>
          </div>
          <div class="col-md-6">
            <%= link_to t('password.forgot?'), new_password_reset_path, class: "btn btn-link pull-right" %>
          </div>
        </div>
    </span>

    <hr>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= f.submit t('do.login'), class: "btn btn-success btn-block btn-lg" %>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= link_to t('auth.signup'), new_user_path, class: "btn btn-primary btn-block btn-lg" %>
      </div>
    </div>

  <% end %>
</div>
