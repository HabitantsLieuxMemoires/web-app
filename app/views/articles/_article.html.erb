<div class="article row">
  <div class="col-xs-12 col-sm-12 col-md-3">
    <a href="#" title="<%= article.title %>" class="thumbnail">
      <img src="<%= article.image %>" alt="image" />
    </a>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-3">
    <ul class="meta-search">
      <li><%= fa_icon "calendar", text: article.created_at %></li>
    </ul>
    <div class="shareAndComments">
      <div class="share"><span><%= article.share_count %></span></div>
      <div class="comments"><span><%= article.comment_count %></span></div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 excerpet">
    <h3><%= link_to article.title, article.url %></h3>
    <p><%= article.body(200) %></p>
  </div>
  <span class="clearfix"></span>
</div>
