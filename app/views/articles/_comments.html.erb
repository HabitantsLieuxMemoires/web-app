<div class="panel panel-default" id="article-comments" data-load="<%= article_comments_path(article.id) %>">
  <div class="panel-heading clearfix">
    <div class="pull-left">
      <h3 class="panel-title"><%= t('models.article.comments') %></h3>
    </div>
    <div class="pull-right">
      <% if current_user %>
        <%= link_to t('models.comment.create'), new_article_comment_path(article.id),
                  class: "btn btn-default btn-sm",
                  id: "create_comment",
                  data: {
                    toggle: 'modal',
                    target: '#modal-create-comment'
                  } %>
      <% end %>
    </div>
  </div>

  <div class="panel-body" id="comments-list">
    <a class="more-comments-link" href="<%= article_comments_path(article.id) %>"></a>
  </div>

</div>
