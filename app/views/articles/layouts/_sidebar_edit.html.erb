<div class="well" id="article-actions">
  <%= f.submit t('publish'), class: 'btn btn-primary btn-block' %>
  <%= link_to t('cancel'), :back, class: 'btn btn-danger btn-block' %>
</div>

<div class="panel panel-default" id="article-details">
  <div class="panel-heading">
    <%= t('article.details') %>
  </div>
  <div class="panel-body">
    <%= f.collection_select :theme_id, Theme.all, :id, :title %>
    <%= f.collection_select :chronology_id, Chronology.all, :id, :title %>
    <%= f.text_field :tags %>
    <%= f.form_group do %>
      <%= f.check_box  :public, inline: true %>
      <%= f.check_box  :locked, inline: true %>
    <% end %>
  </div>
</div>

<div class="panel panel-default" id="article-metadatas">
  <div class="panel-heading">
    <%= t('article.metadatas') %>
  </div>
  <div class="panel-body">
    <!-- TODO: Waiting for bootstrap-rails-form to implement append-prepend buttons -->
    <div class="form-group">
      <label class="control-label col-sm-4" for="article_location">Location</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input class="form-control" readonly="readonly" id="article_location" name="article[location]" type="text">
          <span class="input-group-btn">
            <a class="btn btn-default" href="#" id="bt_fill_location">
              <i class="fa fa-map-marker"></i>
            </a>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>



