<% content_for :sidebar do %>
  <%= render partial: 'articles/layouts/sidebar_show', locals: {article: @article} %>
<% end %>

<div class="row">
  <div class="col-lg-11">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="pull-left">
          <h3 class="panel-title"><%= @article.title %></h3>
        </div>
        <div class="pull-right">
          <%= @article.visibility %>
        </div>
      </div>
      <div class="panel-body">
        <div class="tab-content">
          <div class="tab-pane active" id="content">
            <%= render 'summary', article: @article %>

            <%=raw @article.body %>
          </div>
          <div class="tab-pane" id="images">
          </div>
          <div class="tab-pane" id="videos">
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="text-center">
          <%= render 'social',   article: @article %>
        </div>
      </div>
    </div>

    <%= render 'comments', article: @article %>

  </div>
  <div class="col-lg-1" id="article-control">
    <%= render 'actionbar', article: @article %>
  </div>

  <%= render 'articles/modals/modals_show' %>
</div>
