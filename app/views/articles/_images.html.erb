<% edit_mode = false if local_assigns[:edit_mode].nil? %>

<div class="panel panel-default hidden" id="article-images" data-load="<%= article_images_path(article.id) %>">
  <div class="panel-heading clearfix">
    <div class="pull-left">
      <h3 class="panel-title"><%= @article.title %></h3>
    </div>
    <div class="pull-right">
      <% if current_user and edit_mode %>
        <%= link_to t('models.image.upload'), new_article_image_path(article.id),
                  id: 'add_image',
                  class: "btn btn-default btn-sm",
                  remote: true,
                  data: {
                    toggle: 'modal',
                    target: '#modal-add-image'
                  } %>
      <% end %>
    </div>
  </div>
  <div class="panel-body" id="images-list">
  </div>
</div>


<!-- Modals -->
<div id="modal-add-image" class="modal" aria-labelledby="modal-add-image-label" aria-hidden="true" role="dialog">
</div>
