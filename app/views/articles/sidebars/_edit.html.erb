<div class="well" id="article-actions">
  <%= f.submit t('article.do.publish'), class: 'btn btn-primary btn-block' %>
  <%= f.submit t('article.do.save'),    class: 'btn btn-default btn-block', id: 'bt-save-article',
      disabled: true,
      title: t('article.tooltip.save'),
      data: {
        toggle: "tooltip",
        placement: "left"
      }
  %>
</div>

<div class="panel panel-default" id="article-details">
  <div class="panel-heading">
    <h4 class="panel-title">
      <%= fa_icon "list" %>
      <%= t('article.details') %>
    </h4>
  </div>
  <div class="panel-body">
    <%= f.collection_select :theme_id, Theme.all, :id, :title %>
    <%= f.collection_select :chronology_id, Chronology.all, :id, :title %>
    <%= f.text_field :tags %>
  </div>
</div>

<div class="panel panel-default" id="article-metadatas">
  <div class="panel-heading">
    <h4 class="panel-title">
      <%= fa_icon "tag" %>
      <%= t('article.metadatas') %>
    </h4>
  </div>
  <div class="panel-body">
    <!-- TODO: Waiting for bootstrap-rails-form to implement append-prepend buttons -->
    <div class="form-group">
      <label class="control-label" for="article_location"><%= Article.human_attribute_name(:location) %></label>
      <div class="input-group">
        <input class="form-control location" data-theme="<%= @article.theme.slug %>" data-latlng="<%= article.location %>" data-title="<%= article.title %>" data-uri="<%= article_path(article.slug) %>" readonly="readonly" id="article_location" name="article[location]" type="text" value="<%= article.location %>">
        <span class="input-group-btn">
          <a class="btn btn-default" href="#" id="bt_fill_location">
            <i class="fa fa-map-marker"></i>
          </a>
        </span>
      </div>
    </div>
  </div>
</div>



