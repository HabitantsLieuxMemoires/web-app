<% summary ||= article.summary %>

<% unless summary.blank? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well well-sm" id="summary">
        <h4 class="text-center"><%= t('article.summary') %></h4>
        <br>
        <%= summary %>
      </div>
    </div>
  </div>
<% end %>
