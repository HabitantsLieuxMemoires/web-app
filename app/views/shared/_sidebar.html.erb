<%= render 'shared/sidebar_actions' %>

<div class="well sidebar-box" id="sidebar-themes">
  <h4><%= t('nav.themes') %></h4>
  <ul class="nav nav-pills nav-stacked">
    <% Theme.by_articles_count.each do |t| %>
      <li>
        <%= link_to theme_path(t), class: 'theme' do %>
          <%= t.title %>
          <div class="pull-right"><span class="badge"><%= t.article_count %></span></div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="well sidebar-box" id="sidebar-chronologies">
  <h4><%= t('nav.chronology') %></h4>
  <ul class="nav nav-pills nav-stacked">
    <% Chronology.by_articles_count.each do |c| %>
      <li>
        <%= link_to chronology_path(c), class: 'chronology' do %>
          <%= c.title %>
          <div class="pull-right"><span class="badge"><%= c.article_count %></span></div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<div class="well" id="sidebar-news">
  <h4><%= t('nav.news') %></h4>
</div>
