<div class="col-md-3 thumb image" data-id="<%= image.id %>">
    <a class="thumbnail" href="<%= image.article_image_url %>" data-title="<%= image.title %>" data-toggle="lightbox" data-gallery="article-images">
        <img class="img-responsive" src="<%= image.article_image_url(:thumb) %>">

    <% if edit_mode %>
      <%= link_to article_image_path(article, image), method: :delete, remote: true, class: "btn btn-danger btn-block btn-sm ladda-button", data: {
          :style => "expand-right"
        } do %>
          <span class="ladda-label"><%= t('article.image.do.remove') %></span>
        <% end %>
    <% end %>
    </a>
</div>
