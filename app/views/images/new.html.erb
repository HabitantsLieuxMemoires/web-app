<%= bootstrap_form_for [@article, Image.new],
                       url: {action: "create"},
                       remote: true,
                       html: {:multipart => true},
                       layout: :horizontal do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 id="modal-add-image-label">
      <%= fa_icon "picture-o" %>
      <%= t('article.image.title.upload') %>
    </h4>
  </div>
  <div class="modal-body">
    <%= f.text_field :title %>

    <%= f.form_group do %>
      <%= render partial: 'file_upload', locals: {f: f} %>

      <%= f.hidden_field :article_image_cache %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary ladda-button"
            data-style="expand-right"
            name="commit" type="submit">
      <span class="ladda-label"><%= t('article.image.do.upload') %></span>
    </button>
  </div>
<% end %>

