<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @theme.title %></h3>
  </div>
  <div class="panel-body">
    <% if @theme.articles.any? %>
      <ul class="media-list" id="theme-articles">
        <%= render partial: 'articles/article', collection: @theme.articles %>
      </ul>
    <% else %>
      <div class="alert alert-info">
        <%= t('models.article.none') %>
      </div>
    <% end %>
  </div>
</div>
