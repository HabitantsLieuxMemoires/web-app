<%= render 'header' %>

<%= bootstrap_form_for Feature.new, url: {action: "create"} do |f| %>
  <div class="box">
    <div class="box-header">
      <%= fa_icon "edit" %>
      <h3 class="box-title"><%= t('admin.editorial.content') %></h3>
    </div>
    <div class="box-body">
      <%= f.text_field :title, label: Feature.human_attribute_name(:title) %>
      <%= f.text_area  :description, rows: 8, label: Feature.human_attribute_name(:description) %>
    </div>
    <div class="box-footer">
      <%= f.primary t('admin.editorial.feature.do.publish') %>
    </div>
  </div>
<% end %>
