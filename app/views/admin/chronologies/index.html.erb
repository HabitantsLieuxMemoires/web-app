<%= render 'header' %>

<div class="box">
  <div class="box-header">
    <h3 class="box-title"><%= t('admin.chronologies.list') %></h3>
    <div class="box-tools pull-right">
        <%= link_to t('admin.chronologies.create'), new_admin_chronology_path, class: 'btn btn-primary', role: 'button' %>
    </div>
  </div>
  <div class="box-body">
    <% if @chronologies.any? %>
      <table class="table table-hover">
        <tbody data-link="row" class="rowlink">
          <tr>
            <th><%= Chronology.human_attribute_name(:title) %></th>
          </tr>
          <% @chronologies.each do |c| %>
            <tr class="chronology">
              <td><%= c.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
