<div class="panel panel-default" id="main-popular">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= fa_icon "share-square-o" %>
      <%= t('cells.popular.title') %>
    </h3>
  </div>
  <div class="panel-body">
    <% if @populars.any? %>
      <div class="row">
        <% @populars.each do |p| %>
          <div class="col-md-4 popular">
            <img class="img-rounded" alt="80x80" src="http://lorempixel.com/80/80/nature">
            <%= link_to p.url, class: 'location', data: {
                :latlng => p.location,
                :title  => p.title,
                :uri    => p.url
              } do %>
              <h5><%= p.title %></h5>
            <% end %>
            <p><%= p.body(120) %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="bg-info"><%= t('article.popular.none') %></p>
    <% end %>
  </div>

</div>
