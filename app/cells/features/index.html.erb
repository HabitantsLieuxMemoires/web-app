<div class="panel panel-default" id="main-featured">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= fa_icon "star" %>
      <%= t('cells.featured.title') %>
    </h3>
  </div>
  <div class="panel-body">
    <% unless @feature.blank? %>
      <h4><%= @feature.title %></h4>
      <p class="text-justify"><%=raw @feature.description %></p>
      <hr>
      <ul class="media-list">
        <% @feature.articles.each do |f| %>
          <li class="media feature">
            <a class="pull-right" href="#">
              <img class="media-object img-thumbnail article-featured-image" src="<%= f.image %>" alt="64x64">
            </a>
            <div class="media-body">
              <%= link_to f.url, class: 'location', data: {
                  :latlng => f.location,
                  :title  => f.title,
                  :uri    => f.url,
                  :theme  => f.theme.downcase
                } do %>
                <h5><%= f.title %></h5>
              <% end %>
              <%= f.body(140) %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="bg-info"><%= t('admin.editorial.feature.none') %></p>
    <% end %>
  </div>
</div>
