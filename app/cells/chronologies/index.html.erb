<div class="well sidebar-box" id="sidebar-chronologies">
  <h4><%= t('nav.chronology') %></h4>
  <ul class="nav nav-pills nav-stacked">
    <% @chronologies.each do |c| %>
      <li>
        <%= link_to chronology_path(c.slug), class: 'chronology' do %>
          <%= c.title %>
          <div class="pull-right"><span class="badge"><%= c.article_count %></span></div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
